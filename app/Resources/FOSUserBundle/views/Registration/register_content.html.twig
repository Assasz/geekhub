{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'form/custom.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" method="POST" novalidate id="signup">
  <div class="form-header">
     <h2>Sign up to <a href="{{ path('home') }}">GeekHub</a></h2>
     <p>Please fill out the following fields to signup:</p>
   </div>

   {{ form_label(form.email) }}
   {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'id': 'email', 'autofocus': 'autofocus'} }) }}
   {{ form_errors(form.email) }}

   {{ form_label(form.username) }}
   {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'id': 'username' } }) }}
   {{ form_errors(form.username) }}

   <div class="row">
     <div class="col-sm-6 col-xs-12">
       {{ form_label(form.forename) }}
       {{ form_widget(form.forename, { 'attr': {'class': 'form-control', 'id': 'forename' } }) }}
       {{ form_errors(form.forename) }}
      </div>
      <div class="col-sm-6 col-xs-12">
       {{ form_label(form.surname) }}
       {{ form_widget(form.surname, { 'attr': {'class': 'form-control', 'id': 'surname' } }) }}
       {{ form_errors(form.surname) }}
     </div>
   </div>

   {{ form_label(form.plainPassword.first) }}
   {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'id': 'password' } }) }}
   {{ form_errors(form.plainPassword.first) }}

   {{ form_label(form.plainPassword.second) }}
   {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'id': 'password_confirmation' } }) }}
   {{ form_errors(form.plainPassword.second) }}

   {{ form_rest(form) }}

   <div class="form-info-wrapper">
       <p>By clicking on "Sign up" below, you are agreeing to the <a href="{{ path('terms_of_service') }}">Terms of Service</a> and the <a href="{{ path('privacy_policy') }}">Privacy Policy</a>.</p>
       <p>Already have an account? Sign in <a href="{{ path('fos_user_security_login') }}">here!</a></p>
   </div>

   <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-lg" disabled/>
</form>
