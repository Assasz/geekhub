{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" novalidate>
    <div class="form-header">
      <h2 class="form-signin-heading">Sign in to <a href="{{ path('home') }}">GeekHub</a></h2>
      <p>Please fill out the following fields to signin:</p>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required autofocus />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" class="form-control" required />

    <div class="checkbox">
      <label for="remember_me">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        {{ 'security.login.remember_me'|trans }}
      </label>
    </div>

    <p>If you forgot your password you can <a href="{{ path('fos_user_resetting_request') }}">reset it.</a></p>

    <p>Don't have an account yet? Sign up <a href="{{ path('fos_user_registration_register') }}">here!</a></p>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-lg" />
</form>
