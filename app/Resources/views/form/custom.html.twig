{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <p class="form-error">
                  {{ error.message }}
                </p>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{%- block button_row -%}
        {{- form_widget(form) -}}
{%- endblock button_row -%}
