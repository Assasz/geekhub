<div class="col col-md-4 col-xs-6">
    <a href="{{ path('user', {'user': user[0].id}) }}">
        <div class="user-card-container">
            <img src="{{ asset(user[0].profilePicturePath) }}" alt="{{ user[0].username }}" class="img-rounded img-responsive user-card-image">
            <div class="user-card-caption">
                <h3 class="user-card-username">
                    {{ user[0].username }}
                    <small>{{ user[0].forename }} {{ user[0].surname }}</small>
                </h3>
                <p>
                    <span class="fa fa-fw fa-pencil" aria-hidden="true"></span>
                    <span class="visually-hidden">Posts</span>
                    {{ user[0].getPosts|length}}
                    <span class="fa fa-fw fa-users space-left" aria-hidden="true"></span>
                    <span class="visually-hidden">Followers</span>
                    {{ user[0].getFollowers|length }}
                </p>
            </div>
        </div>
    </a>
</div>
