{% extends 'layout/default.html.twig' %}

{% block title %}Add post{% endblock %}

{% form_theme form 'form/custom.html.twig' %}

{% block content %}
    <h2 class="page-header">Add post</h2>
    <div class="form-wrapper">
      {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

      {{ form_label(form.title) }}
      {{ form_widget(form.title) }}
      {{ form_errors(form.title) }}

      {{ form_label(form.description) }}
      {{ form_widget(form.description) }}
      {{ form_errors(form.description) }}

      {{ form_label(form.image) }}
      {{ form_widget(form.image) }}
      {{ form_errors(form.image) }}

      {{ form_label(form.tags) }}
      {{ form_widget(form.tags) }}
      {{ form_errors(form.tags) }}

      {{ form_label(form.content) }}
      {{ form_widget(form.content) }}
      {{ form_errors(form.content) }}

      {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/bootstrap-tokenfield.min.css' )}}" rel="stylesheet">
    <link href="{{ asset('css/fileinput.min.css') }}" media="all" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/plugins/piexif.min.js') }}"></script>
    <script src="{{ asset('js/plugins/purify.min.js') }}"></script>
    <script src="{{ asset('js/plugins/sortable.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-tokenfield.min.js' )}}"></script>
    <script src="{{ asset('js/fileinput.min.js') }}"></script>
    <script src="{{ asset('js/app-postcreate.js') }}"></script>
{% endblock %}
