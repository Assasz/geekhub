<li class="list-group-item">
    <div class="row">
        <div class="col-md-2 col-xs-4">
            <img src="{{ asset(post.author.profilePicturePath) }}" alt="{{ post.author.username }}" class="img-rounded img-responsive">
        </div>
        <div class="col-md-10 col-xs-8">
            <a href="{{ path('post', {'post': post.id}) }}">
                <h3>{{ post.title }}</h3>
            </a>
            {% if post.tags|length > 0 %}
                <p>
                    <span class="fa fa-fw fa-tags" aria-hidden="true"></span>
                    <span class="visually-hidden">Tags</span>
                    {% for tag in post.tags %}
                        {{ tag.name }}
                    {% endfor %}
                </p>
            {% endif %}
            <p>Posted {{ post.createDate|date('F j, Y, g:i a') }} by <strong>{{ post.author }}</strong></p>
        </div>
    </div>
</li>
